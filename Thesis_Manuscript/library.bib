issn = {21678359},
journal = {PeerJ},
keywords = {Geostatistics,Kriging,Pedometrics,Predictive modeling,R statistical computing,Random forest,Sampling,Spatial data,Spatiotemporal data},
number = {8},
pmid = {30186691},
