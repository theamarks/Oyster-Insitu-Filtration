file = {:Users/davidcoats/Dropbox (CSU Fullerton)/Mendeley/Wilson-Ormond, Powell, Ray/1997/Short-term and small-scale variation in food availability to natural oyster populations Food, flow and flux/Wilson-Ormond, Powell, Ray - 1997 - Short-term and small-scale variation in food availability to natural oyster populations Food, flow a.pdf:pdf},
issn = {01739565},
journal = {Marine Ecology},
keywords = {Crassostrea virginica,Feeding,Flux of food,Food availability,Oyster,Water flow},
number = {1},
pages = {1--34},
title = {{Short-term and small-scale variation in food availability to natural oyster populations: Food, flow and flux}},
