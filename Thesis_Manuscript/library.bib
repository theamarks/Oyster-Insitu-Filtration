@phdthesis{Carlton1979,
abstract = {At least 160 species in 11 phyla of marine and estuarine invertebrates have either certainly or probably been introduced by man into the bays, estuaries, and harbors of the Pacific coast of North America from southern Alaska to northern Baja California. These species have been introduced since the mid-nineteenth century primarily on and in ships (as fouling, boring, and ballast dwelling organisms) and with commercial oyster transplantations. Major donor areas of this introduced fauna are the western and southwestern Pacific Ocean and the western Atlantic Ocean. A positive relationship between the intensity of shipping or oyster introductions and the introduction of exotic species may exist, such that multiple and massive inoculations may trigger the successful establishment of a foreign species. A detailed set of criteria, centering upon evidence derived from systematics, biogeography, history, distributional ecology, biology, and genetics, is set forth for the recognition of introduced species. From the Straits of Georgia to Coos Bay, Oregon, the exotic fauna is comprised largely of estuarine species introduced with oysters (and/or shipping) from the North Atlantic Ocean and from the western North Pacific Ocean; a strictly ship-fouling exotic fauna is poorly represented here; from Humboldt Bay to Morro Bay, but primarily concentrated in San Francisco Bay, the exotic fauna is represented relatively equally by estuarine species derived from ship-fouling and ballast, oysters, and oysters and/or shipping. These originate predominately from the Atlantic, and less so from the western Pacific. A small introduced warm-water southern faunal element is established on the margins of San Francisco Bay. In arid southern California embayments and harbors, stenohaline exotic fouling species introduced primarily by ships are derived largely from the Atlantic and less so from the western Pacific; a strong representation of southern hemisphere warm-water species exists here. With few exceptions, the introduced invertebrates of the Pacific coast are restricted to protected calm-water embayments, estuaries, and harbors. Hypotheses to account for this restriction relate to the absence of mechanisms that would transport open-coast species from other regions of the world to the Pacific coast, and to the failure of exotic species to spread to the open coast for biological, physiological, and ecological (competitive) reasons. Introduced species form distinctive communities on the Pacific coast. In some bays and harbors exotic species are dominant in both species numbers and in biomass. Their successful establishment may be related to (1) the hypothetical absence of competitive interactions, due to the lack of native ecologically equivalent species (aboriginally absent or destroyed by man), and/or due to the creation of novel habitats by man to which only certain introduced species were preadapted, and to (2) the possible competitive displacement of some native species by invading exotic species. The transport by man of invertebrates has contributed significantly to a world-wide similarity in estuarine and harbor faunas, of which the introduced fauna of the northeastern Pacific Ocean is a striking example. Community studies that embrace not only the introduced invertebrates of the Pacific coast, but also the exotic species of fish, algae, and seagrasses that are now present, will yield a synthetic picture of the extent to which man, through accidental introductions, has modified the nearshore fauna.},
author = {Carlton, J.T.},
school = {University of California, Davis},
title = {{History, Biogeography, and Ecology of the Introduced Marine and Marine and Estuarine Invertebrates of the Pacific Coast of North America}},
year = {1979}
}
@phdthesis{Maynard2016,
abstract = {The Olympia oyster, Ostrea lurida, is the only oyster native to the west coast of N. America. Once abundant, O. lurida is now considered functionally extinct and absence of Olympia oysters has contributed to a continual decline in the health of California's valuable estuary ecosystems. Human-assisted reintroduction is one potential strategy to increase O. lurida population sizes and help restore Californian estuaries. Ideally, restoration would use genotypes capable of surviving future conditions. However, which O. lurida populations will be most tolerant of climate change, in particular low salinity, and therefore most suitable for use in reintroduction remains uncertain. RNA-Seq has emerged as a vital tool to understand ecological and evolutionary processes of non-model organisms. Using a novel RNA-Seq pipeline, a transcriptome for O. lurida was generated yielding 51,574 contigs and accounting for upwards of 10,000 unique genes. Quality control metrics including mean contig length (1664 bp), percent of reads mapped back to the reference transcriptome (78{\%}), and the percent of annotated reads (49{\%}), are similar to other non-model organism transcriptome assemblies, and offers a substantial improvement over existing sequence resources for O. lurida. In important future research, this transcriptome can be used to better understand how O. lurida populations manage environmental stress at the molecular level and help to identify which populations of O. lurida are ultimately best suited for reintroduction.},
