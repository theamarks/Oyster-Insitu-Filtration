doi = {10.1016/0025-3227(88)90007-2},
file = {:Users/davidcoats/Dropbox (CSU Fullerton)/Mendeley/Ashley, Grizzle/1988/Interactions between hydrodynamics, benthos and sedimentation in a tide-dominated coastal lagoon/Ashley, Grizzle - 1988 - Interactions between hydrodynamics, benthos and sedimentation in a tide-dominated coastal lagoon.pdf:pdf},
issn = {00253227},
