file = {:Users/davidcoats/Dropbox (CSU Fullerton)/Mendeley/Walles et al/2016/Niche dimension differs among life-history stages of Pacific oysters in intertidal environments/Walles et al. - 2016 - Niche dimension differs among life-history stages of Pacific oysters in intertidal environments.pdf:pdf},
issn = {01718630},
journal = {Marine Ecology Progress Series},
keywords = {Ecosystem engineering,Ecosystembased management,Growth,Niche,Oyster reef,Recruitment,Tidal flats},
pages = {113--122},
title = {{Niche dimension differs among life-history stages of Pacific oysters in intertidal environments}},
volume = {562},
year = {2016}
