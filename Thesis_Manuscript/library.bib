issn = {00220981},
journal = {Journal of Experimental Marine Biology and Ecology},
keywords = {Feeding rates,Integrating studies,Scaling functions,Suspension feeding,Temporal scale},
number = {1},
pages = {131--141},
title = {{Incorporating temporal variability of stressors into studies: An example using suspension-feeding bivalves and elevated suspended sediment concentrations}},
