keywords = {Amblypneustes pallidus,Amphibolis antarctica,Carbon dioxide,Climate change,Consumption,Herbivory,Nutrient enrichment,Temperature},
pages = {37--46},
title = {{Eutrophication offsets increased sea urchin grazing on seagrass aused by ocean warming and acidification}},
