journal = {Ecological Applications},
keywords = {Manuscript,alien species,biological control,biotic invaders,eradication,global change,immigrationl,invasionl,naturalization,nonindigenous,pests,weeds.},
number = {3},
pages = {689--710},
title = {{Biotic Invasions: Causes, Epridemiology, Global Consequences, and Control}},
