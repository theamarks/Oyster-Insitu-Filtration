journal = {Ecological Indicators},
keywords = {Biological monitoring,Ecological assessment,Feral pigs,Murray-Darling Basin,Temporary river},
number = {September 2017},
pages = {537--547},
title = {{Assessing the ecological health of rivers when they are dry}},
