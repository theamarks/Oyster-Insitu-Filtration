issn = {22124209},
journal = {International Journal of Disaster Risk Reduction},
keywords = {Coastal flooding,Data technologies,Disaster risk reduction,Ecosystem services,Erosion,Resilience},
title = {{Harnessing new data technologies for nature-based solutions in assessing and managing risk in coastal zones}},
volume = {51},
