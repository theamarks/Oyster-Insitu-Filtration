doi = {10.1002/ecy.1602},
file = {:Users/davidcoats/Dropbox (CSU Fullerton)/Mendeley/Wasson et al/2016/Coast-wide recruitment dynamics of Olympia oysters reveal limited synchrony and multiple predictors of failure/Wasson et al. - 2016 - Coast-wide recruitment dynamics of Olympia oysters reveal limited synchrony and multiple predictors of failure.pdf:pdf},
issn = {00129658},
journal = {Ecology},
