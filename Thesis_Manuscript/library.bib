doi = {10.1371/journal.pone.0022396},
file = {:Users/davidcoats/Dropbox (CSU Fullerton)/Mendeley/Scyphers et al/2011/Oyster reefs as natural breakwaters mitigate shoreline loss and facilitate fisheries/Scyphers et al. - 2011 - Oyster reefs as natural breakwaters mitigate shoreline loss and facilitate fisheries.PDF:PDF},
